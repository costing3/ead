<?xml version="1.0" encoding="UTF-8"?>
<web-app 
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    version="2.5">

	<display-name>Servlet and JSP Sum Calculator</display-name>

	<servlet>
		<display-name>SumServlet</display-name>
		<servlet-name>SumServlet</servlet-name>
		<servlet-class>ro.ucv.inf.eja.servlet.SumServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>SumServlet</servlet-name>
		<url-pattern>/SumServlet</url-pattern>
	</servlet-mapping>
	
</web-app>
